#!/bin/bash


package() {
  hpack examples
  hpack hyperbole
  hpack docgen
}

compile() {
  ghcid --command="cabal repl examples hyperbole web-view" --run=Example.App.run --warnings --reload=./client/dist/hyperbole.js
}

client() {
  cd client
  # npx webpack -w --mode=development
  npx webpack -w
}

# run tests once (so we don't forget!)
cabal test

(trap 'kill 0' SIGINT; package & client & compile)
